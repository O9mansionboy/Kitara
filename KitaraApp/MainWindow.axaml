<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:controls="clr-namespace:KitaraApp.Controls"
        x:Class="KitaraApp.MainWindow"
        Title="Kitara - Krita-like UI"
        Width="1200" Height="800"
        Background="#2E3440">

    <Grid>

        <!-- Left Vertical Toolbar -->
        <Border Grid.Column="0" Background="#3B4252" Padding="8">
            <StackPanel Width="60" Spacing="24">
                <Button x:Name="PenButton" Content="ðŸ–Œ" ToolTip.Tip="Pen" FontSize="28" Background="Transparent" Foreground="White" />
                <Button x:Name="EraserButton" Content="ðŸ©¹" ToolTip.Tip="Eraser" FontSize="28" Background="Transparent" Foreground="White" />
            </StackPanel>
        </Border>

        <!-- Canvas Area: stretches to fill available space -->
        <Border Grid.Column="1" Background="#D8DEE9" Margin="8" CornerRadius="6" 
                HorizontalAlignment="Stretch" VerticalAlignment="Stretch" ClipToBounds="True">
            <controls:CanvasView x:Name="Canvas"
                                 HorizontalAlignment="Stretch" 
                                 VerticalAlignment="Stretch" />
        </Border>

        <!-- Right Side Panel -->
        <Border Grid.Column="2" Background="#3B4252" Padding="16" Width="320">
            <StackPanel Spacing="20">

                <!-- Color Picker -->
                <TextBlock Text="Color Picker" Foreground="White" FontWeight="Bold" Margin="0,0,0,0" />

                <StackPanel Orientation="Vertical" Spacing="8">
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="R:" Foreground="White" Width="20" VerticalAlignment="Center"/>
                        <Slider x:Name="RedSlider" Minimum="0" Maximum="255" Value="0" Width="160" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="G:" Foreground="White" Width="20" VerticalAlignment="Center"/>
                        <Slider x:Name="GreenSlider" Minimum="0" Maximum="255" Value="0" Width="160" />
                    </StackPanel>
                    <StackPanel Orientation="Horizontal" Spacing="8" VerticalAlignment="Center">
                        <TextBlock Text="B:" Foreground="White" Width="20" VerticalAlignment="Center"/>
                        <Slider x:Name="BlueSlider" Minimum="0" Maximum="255" Value="0" Width="160" />
                    </StackPanel>

                    <Border x:Name="ColorPreview" Width="50" Height="50" BorderBrush="Black" BorderThickness="1" Margin="0,10,0,0" />
                </StackPanel>

                <!-- Save, Load, Clear Buttons -->
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Spacing="16" Margin="0,30,0,0">
                    <Button x:Name="SaveButton" Content="Save" Width="100" />
                    <Button x:Name="LoadButton" Content="Load" Width="100" />
                    <Button x:Name="ClearButton" Content="Clear" Width="100" />
                </StackPanel>

            </StackPanel>
        </Border>

        <!-- Grid Column Definitions -->
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="60" />   <!-- Left Toolbar -->
            <ColumnDefinition Width="*" />    <!-- Canvas area stretches -->
            <ColumnDefinition Width="320" />  <!-- Right panel fixed width -->
        </Grid.ColumnDefinitions>

    </Grid>
</Window>
